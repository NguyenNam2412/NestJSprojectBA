{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    //  Alias mapping
    "baseUrl": "./src",
    "paths": {
      "@auth/*": ["auth/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@entities/*": ["entities/*"],
      "@middleware/*": ["middleware/*"],
      "@audit/*": ["audit/*"],
      "@users/*": ["users/*"],
      "@task/*": ["task/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
